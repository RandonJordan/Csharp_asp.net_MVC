@{
    ViewData["Title"] = "New Activity Page";
}
@model dojo_activity_center.Models.NewActivity
<div class="header">
    <h1>Dojo Activity Center</h1>
    <a id="home" href="/Dashboard">Home</a>
    <a id="logout" href="Logout">Log Off</a>
</div>
<h2>Create an Activity!</h2>
<form asp-action="AddActivity" asp-controller="Activity" method="post">
    <div class="form-group">
        <span asp-validation-for="Title"></span>
        <label asp-for="Title"></label>
        <input asp-for="Title">
    </div>
    <div class="form-group">
        <span asp-validation-for="Date"></span>
        <label asp-for="Date"></label>
        <input type="date" asp-for="Date">
    </div>
    <div class="form-group">
        <span asp-validation-for="Time"></span>
        <label asp-for="Time"></label>
        <input placeholder="9:30 AM" asp-for="Time">
    </div>
    <div class="form-group">
        <span asp-validation-for="Duration"></span>
        <label asp-for="Duration"></label>
        <input type="number" asp-for="Duration">
        <select name="dur">
            <option value="minutes">Minutes</option>
            <option value="hours">Hours</option>
            <option value="days">Days</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span>
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" cols="30" rows="10"></textarea>
    </div>
    <input type="submit" class="button-primary" value="Create Activity">
</form>